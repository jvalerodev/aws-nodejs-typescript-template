{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext",
    "outDir": "build",
    "sourceMap": true,
    "module": "NodeNext",
    "target": "ES2022",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
